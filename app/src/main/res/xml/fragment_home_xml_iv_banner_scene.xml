<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="200dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/poster1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:id="@+id/menu1"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="10dp"
            android:layout_width="10dp"
            motion:layout_constraintEnd_toStartOf="@+id/menu2"
            motion:layout_editor_absoluteX="184dp" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint android:id="@+id/menu2"
            android:layout_height="10dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="10dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_editor_absoluteX="198dp"
            motion:layout_editor_absoluteY="218dp">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3"
            android:layout_height="10dp"
            motion:layout_constraintStart_toEndOf="@+id/menu2"
            motion:layout_constraintTop_toTopOf="@+id/menu2"
            motion:layout_constraintBottom_toBottomOf="@+id/menu2"
            android:layout_width="10dp"
            motion:layout_editor_absoluteY="235dp"
            motion:layout_editor_absoluteX="213dp" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:layout_height="200dp"
            motion:layout_constraintStart_toEndOf="@+id/poster2"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/poster3" />
        <Constraint
            android:layout_height="200dp"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/poster2" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/poster1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/poster2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:id="@+id/menu1"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="10dp"
            android:layout_width="10dp"
            motion:layout_constraintEnd_toStartOf="@+id/menu2"
            motion:layout_editor_absoluteX="184dp" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint android:id="@+id/menu2"
            android:layout_height="10dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="10dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_editor_absoluteX="198dp"
            motion:layout_editor_absoluteY="218dp">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3"
            android:layout_height="10dp"
            motion:layout_constraintStart_toEndOf="@+id/menu2"
            motion:layout_constraintTop_toTopOf="@+id/menu2"
            motion:layout_constraintBottom_toBottomOf="@+id/menu2"
            android:layout_width="10dp"
            motion:layout_editor_absoluteY="235dp"
            motion:layout_editor_absoluteX="213dp" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:layout_height="200dp"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/poster3" />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/poster_home"
        motion:deriveConstraintsFrom="@+id/end">
        <Constraint
            android:id="@+id/poster2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/poster3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:id="@+id/menu1"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="10dp"
            android:layout_width="10dp"
            motion:layout_constraintEnd_toStartOf="@+id/menu2"
            motion:layout_editor_absoluteX="184dp" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint android:id="@+id/menu2"
            android:layout_height="10dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="10dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_editor_absoluteX="198dp"
            motion:layout_editor_absoluteY="218dp">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3"
            android:layout_height="10dp"
            motion:layout_constraintStart_toEndOf="@+id/menu2"
            motion:layout_constraintTop_toTopOf="@+id/menu2"
            motion:layout_constraintBottom_toBottomOf="@+id/menu2"
            android:layout_width="10dp"
            motion:layout_editor_absoluteY="235dp"
            motion:layout_editor_absoluteX="213dp" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/poster_home" >
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>
</MotionScene>